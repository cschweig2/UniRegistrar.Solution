@{
    Layout = "_Layout";
}
@using UniRegistrar.Models;
@model List<UniRegistrar.Models.Major>;

<h1>Majors</h1>

@if (@Model.Count == 0)
{
    <h3>No majors available</h3>
}

<ul>
@foreach(Major major in Model)
{
    <li>@Html.ActionLink($"{major.MajorName}", "Details", new { id = major.MajorId})</li>
}
</ul>

<p>@Html.ActionLink("Add new major", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>