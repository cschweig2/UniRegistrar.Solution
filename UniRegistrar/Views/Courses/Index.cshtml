@{
    Layout = "_Layout";
}

@using UniRegistrar.Models;
@model List<UniRegistrar.Models.Course>;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
    <h3>There are no active courses</h3>
}

@foreach (Course course in Model)
{
    <li>@Html.ActionLink($"{course.CourseName}", "Details", new { id = course.CourseId })</li>
}

<p>@Html.ActionLink("Add a course", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>