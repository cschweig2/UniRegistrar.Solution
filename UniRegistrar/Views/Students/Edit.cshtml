@{
    Layout = "_Layout";
}

@model UniRegistrar.Models.Student

<h1>Edit</h1>

<h4>Edit this student: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    <br>

    @Html.LabelFor(model => model.StudentName)
    @Html.EditorFor(model => model.StudentName)

    <br>

    @Html.Label("Select Major")
    @Html.DropDownList("MajorId")

    <br>


    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <br>

    <input type="submit" value="Save" />
}
<ul>
    @foreach (var join in Model.Courses)
        {
            <li>do you want to remove student from course: @join.Course.CourseName ? </li>
            @using (Html.BeginForm("DeleteCourse", "Students"))
            {
                @Html.Hidden("joinId", @join.EnrollmentId)
                <input type="submit" value="delete"/>
            }
        }
</ul>

<p>@Html.ActionLink("Back to student list", "Index")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>